{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "baseUrl": "packages",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "diagnostics": true,
    "noLib": false,
    "removeComments": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
